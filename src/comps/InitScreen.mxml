<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="400" height="300" creationComplete="group1_creationCompleteHandler(event)">
	
	<fx:Metadata>
		[Event(name="clsoeEvent", type="flash.events.Event")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			public function joined(e:Event):void{
				dispatchEvent(new Event('cc'));
			}
			
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
			}
			
		]]>
	</fx:Script>
	<s:states>
		<s:State name="initS"/>
		<s:State name="register"/>
	</s:states>
	<s:layout>
		<s:BasicLayout/>
	</s:layout>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Panel id="initcomp" title.initS="welcome"
			 title.register="Register Here">
		<s:Form id="uname">
			<s:FormItem label="Enter your Friend ChatRoomId" label.register="Enter your own room Id">
				<s:HGroup autoLayout="true">
					<s:TextInput id="roomName"/>
					<s:Button id="jb" label="Join" label.register="Create and Join" click="joined(event)"/>
				</s:HGroup>
			</s:FormItem>
			<s:FormItem>
				<mx:LinkButton label="Want to Join your own room..?" label.register="Return to enter your friend room" click="currentState='register'" click.register="currentState='initS'">
				</mx:LinkButton>
			</s:FormItem>
		</s:Form>
	</s:Panel>
</s:Group>
